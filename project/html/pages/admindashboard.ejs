		<div class="col-display">
		<div class="block100">
			<form action="/deleteentry/<%= result._gallery[i]._artworkid %>/<%= i %>" method="POST">
				<button type="submit" class="button-base" id="hover">
					<span style="color:white;">Delete Entry</span>
				</button>
			</form>
		</div>
			<div class="row-display">
				<div class="block25"></div>
				<div class="block50"><h2><%= result._gallery[i]._title %></h2></div>
				<div class="block25"></div>
			</div>
			<div class="row-display">
				<div class="block50"><h3><%= result._gallery[i]._client %></h3></div>
				<div class="block50"><h3><%= result._gallery[i]._datecreated %></h3></div>
			</div>
			<div class="block100">
			<img src="data:<%= result._gallery[i]._mimetype %>;base64,<%= result._gallery[i]._b64 %>" id="imageholder" alt="SteveCreativeInkandArtOostende" class="galleryartwork"></img>
